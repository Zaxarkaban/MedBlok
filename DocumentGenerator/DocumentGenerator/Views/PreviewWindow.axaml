<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DocumentGenerator.ViewModels"
        xmlns:entities="clr-namespace:DocumentGenerator.Data.Entities"
        x:Class="DocumentGenerator.Views.PreviewWindow"
        x:DataType="vm:PreviewViewModel"
        Title="Preview"
        Width="600" Height="400">
	<StackPanel Margin="10">
		<TextBlock Text="Предпросмотр данных" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
		<TextBlock Text="{Binding FullName, StringFormat='ФИО: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Position, StringFormat='Должность: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding DateOfBirth, StringFormat='Дата рождения: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Gender, StringFormat='Пол: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Snils, StringFormat='СНИЛС: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding PassportSeries, StringFormat='Серия паспорта: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding PassportNumber, StringFormat='Номер паспорта: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding PassportIssueDate, StringFormat='Дата выдачи паспорта: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding PassportIssuedBy, StringFormat='Кем выдан паспорт: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Address, StringFormat='Адрес: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Phone, StringFormat='Телефон: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding MedicalOrganization, StringFormat='Медицинская организация: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding MedicalPolicy, StringFormat='Медицинский полис: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding MedicalFacility, StringFormat='Медицинское учреждение: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Workplace, StringFormat='Место работы: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding OwnershipForm, StringFormat='Форма собственности: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding Okved, StringFormat='ОКВЭД: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="{Binding WorkExperience, StringFormat='Стаж работы: {0}'}" Margin="0 0 0 5"/>
		<TextBlock Text="Выбранные пункты:" FontWeight="Bold" Margin="0 10 0 5"/>
		<ItemsControl ItemsSource="{Binding SelectedOrderClauses}">
			<ItemsControl.ItemTemplate>
				<DataTemplate x:DataType="entities:OrderClause">
					<TextBlock Text="{Binding ClauseText}" Margin="0 0 0 2"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</Window>